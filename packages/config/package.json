{
  "name": "@gen-elevate/config",
  "version": "1.0.0",
  "private": true,
  "description": "Shared configuration for Gen Elevate",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint.d.ts",
      "default": "./dist/eslint.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "default": "./dist/tailwind.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  }
}
