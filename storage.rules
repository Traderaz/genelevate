rules_version = '2';

// Firebase Storage Security Rules for Gen Elevate
service firebase.storage {
  match /b/{bucket}/o {
    
    // Founder images - authenticated users can upload, anyone can read
    match /founders/{imageId} {
      allow read: if true;
      allow write: if request.auth != null &&
                     request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                     request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // User profile images
    match /profiles/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                     (request.auth.uid == userId || request.auth.token.role == 'admin') &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Course content images
    match /courses/{courseId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                     (request.auth.token.role == 'admin' || request.auth.token.role == 'creator') &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Webinar images
    match /webinars/{webinarId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                     (request.auth.token.role == 'admin' || request.auth.token.role == 'creator') &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Default: deny all other paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
