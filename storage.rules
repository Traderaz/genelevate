rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile Pictures
    match /profile-pictures/{userId}/{fileName} {
      // Allow users to read their own profile pictures
      allow read: if true; // Public read access for profile pictures
      
      // Allow users to upload/update/delete their own profile pictures
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Course Materials (content creators, institution, and admin)
    match /course-materials/{courseId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && (request.auth.token.role == 'admin' 
                       || request.auth.token.role == 'institution'
                       || request.auth.token.role == 'content-creator');
    }

    // Course Content (videos, images for lessons)
    match /courses/{chapterId}/{lessonId}/{fileName} {
      // Public read for all authenticated users
      allow read: if request.auth != null;
      
      // Content creators and admins can upload
      allow write: if request.auth != null 
                   && (request.auth.token.role == 'admin' 
                       || request.auth.token.role == 'content-creator')
                   && request.resource.size < 500 * 1024 * 1024; // Max 500MB for videos
    }

    // Course Images
    match /courses/{chapterId}/{lessonId}/images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && (request.auth.token.role == 'admin' 
                       || request.auth.token.role == 'content-creator')
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB for images
                   && request.resource.contentType.matches('image/.*');
    }

    // Webinar Videos (content creators and admins can upload)
    match /webinars/{userId}/{fileName} {
      // All authenticated users can read (paywall handled at app level)
      allow read: if request.auth != null;
      
      // Content creators and admins can upload their webinars
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && (request.auth.token.role == 'admin' 
                       || request.auth.token.role == 'content-creator')
                   && request.resource.size < 5 * 1024 * 1024 * 1024; // Max 5GB
    }

    // Assignment Submissions
    match /submissions/{userId}/{courseId}/{fileName} {
      // Users can read their own submissions
      allow read: if request.auth != null 
                  && (request.auth.uid == userId 
                      || request.auth.token.role == 'admin' 
                      || request.auth.token.role == 'institution');
      
      // Users can upload their own submissions
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // Certificates
    match /certificates/{userId}/{certificateId} {
      // Users can read their own certificates
      allow read: if request.auth != null 
                  && (request.auth.uid == userId || request.auth.token.role == 'admin');
      
      // Only system/admin can create certificates
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

